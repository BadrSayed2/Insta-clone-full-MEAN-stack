
# Server
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Database
MONGO_URL="mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"

# Auth & Security
JWT_SECRET="your_jwt_secret_here"
SECRET_KEY_ACTIVE="your_secret_key_here"
secretOrPrivateKey="your_private_key_here"
SALT=10
ENCRYPT="your_encryption_key_here"
API_BASE_URL=http://localhost:4000

# Mail (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=your_email@example.com
MAIL_PASS=your_generated_app_password
MAIL_NAME="Insta Arab <no-reply@insta-arab.local>"

# Social links (used in email template footer)
facebookLink=https://facebook.com/yourpage
instagram=https://instagram.com/yourpage
twitterLink=https://twitter.com/yourpage

# Cloudinary
CLOUDINARY_NAME="your_cloudinary_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"
